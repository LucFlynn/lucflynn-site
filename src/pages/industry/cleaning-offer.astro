---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Get 3 Free Exclusive Cleaning Leads - 100% Verified"
  description="Stop paying for shared leads and fake numbers. Get 100% exclusive, tech-verified cleaning leads sent directly to your phone. First 3 leads FREE."
  showNav={false}
  showFooter={false}
>

<style>
    @keyframes pulse-scale {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    .pulse-animation {
        animation: pulse-scale 2s ease-in-out infinite;
    }

    /* Hero Section */
    .offer-hero {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        padding: 4rem 0;
        text-align: center;
        margin-bottom: 3rem;
    }

    .hero-headline {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
    }

    .hero-subheadline {
        font-size: clamp(1.125rem, 2vw, 1.5rem);
        color: var(--text-secondary);
        margin-bottom: 2.5rem;
        line-height: 1.5;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Result Cards */
    .results-section {
        background: var(--dark-lighter);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 3rem 2rem;
        margin-bottom: 2rem;
    }

    .results-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    @media (min-width: 768px) {
        .results-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .result-card {
        background: var(--dark);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 1.5rem;
        transition: transform 0.2s, border-color 0.2s;
    }

    .result-card:hover {
        transform: translateY(-4px);
        border-color: var(--accent);
    }

    .result-card h3 {
        color: var(--accent);
        font-size: 1.125rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .result-card p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    /* Content Sections */
    .content-section {
        background: var(--dark-lighter);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 3rem 2rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: clamp(1.75rem, 3vw, 2.25rem);
        font-weight: 800;
        color: var(--text-primary);
        text-align: center;
        margin-bottom: 2rem;
    }

    .section-subtitle {
        text-align: center;
        color: var(--text-secondary);
        font-size: 1.125rem;
        margin-bottom: 2rem;
    }

    /* Math Section Boxes */
    .math-box {
        background: rgba(37, 99, 235, 0.05);
        border: 1px solid rgba(37, 99, 235, 0.2);
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1rem 0;
    }

    .math-box p {
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 0.5rem;
    }

    .math-box.success {
        background: rgba(16, 185, 129, 0.05);
        border-color: rgba(16, 185, 129, 0.2);
    }

    .math-box.purple {
        background: rgba(168, 85, 247, 0.05);
        border-color: rgba(168, 85, 247, 0.2);
    }

    .math-highlight {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        display: block;
        margin-top: 0.5rem;
    }

    /* Offer Boxes */
    .offer-box {
        background: var(--dark);
        border: 2px solid var(--border);
        border-radius: 12px;
        padding: 2rem;
        margin: 1.5rem 0;
    }

    .offer-box.primary {
        border-color: var(--accent);
        background: rgba(16, 185, 129, 0.05);
    }

    .offer-box.secondary {
        border-color: var(--primary);
        background: rgba(37, 99, 235, 0.05);
    }

    .offer-box h3 {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 1rem;
    }

    .offer-box ul {
        list-style: none;
        padding: 0;
        margin: 1rem 0;
    }

    .offer-box li {
        display: flex;
        align-items: start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .offer-highlight {
        background: rgba(16, 185, 129, 0.1);
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1.5rem;
    }

    .offer-highlight p {
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    /* Buttons */
    .btn-primary {
        background: var(--accent);
        color: var(--dark);
        font-weight: 700;
        padding: 1.25rem 3rem;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        font-size: 1.125rem;
        transition: all 0.2s;
        box-shadow: 0 4px 20px rgba(16, 185, 129, 0.3);
    }

    .btn-primary:hover {
        background: #0ea571;
        transform: translateY(-2px);
        box-shadow: 0 6px 30px rgba(16, 185, 129, 0.4);
    }

    /* Trust Badges */
    .trust-badges {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-top: 1.5rem;
    }

    .trust-badge {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--accent);
        font-size: 0.875rem;
        font-weight: 600;
    }

    /* Credibility Section */
    .credibility-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        align-items: center;
        max-width: 1000px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .credibility-grid {
            grid-template-columns: auto 1fr;
        }
    }

    .credibility-image {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        margin: 0 auto;
    }

    .credibility-text p {
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 1rem;
    }

    .credibility-text strong {
        color: var(--text-primary);
    }

    /* Testimonial */
    .testimonial-box {
        background: var(--dark-lighter);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 2.5rem;
        text-align: center;
        margin-bottom: 2rem;
    }

    .testimonial-stars {
        color: #fbbf24;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .testimonial-text {
        font-size: 1.125rem;
        font-style: italic;
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 1.5rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .testimonial-author {
        color: var(--text-primary);
        font-weight: 600;
    }

    /* FAQ */
    .faq-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .faq-item {
        padding-bottom: 1.5rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--border);
    }

    .faq-item:last-child {
        border-bottom: none;
    }

    .faq-question {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.75rem;
    }

    .faq-answer {
        color: var(--text-secondary);
        line-height: 1.7;
    }

    /* Qualification List */
    .qualification-list {
        max-width: 900px;
        margin: 2rem auto 0;
    }

    .qualification-item {
        display: flex;
        gap: 1rem;
        align-items: start;
        margin-bottom: 1.5rem;
    }

    .qualification-check {
        width: 32px;
        height: 32px;
        background: rgba(16, 185, 129, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .qualification-check svg {
        width: 20px;
        height: 20px;
        color: var(--accent);
    }

    .qualification-text {
        color: var(--text-secondary);
        font-size: 1.125rem;
        line-height: 1.6;
    }

    .qualification-text strong {
        color: var(--text-primary);
    }

    /* CTA Sections */
    .cta-section {
        background: linear-gradient(135deg, var(--accent) 0%, #059669 100%);
        border-radius: 12px;
        padding: 3rem 2rem;
        text-align: center;
        color: var(--dark);
        margin-bottom: 2rem;
    }

    .cta-section h2 {
        color: var(--dark);
        font-size: clamp(1.75rem, 3vw, 2.5rem);
        font-weight: 800;
        margin-bottom: 1.5rem;
    }

    .cta-section .btn-primary {
        background: white;
        color: var(--accent);
    }

    .cta-section .btn-primary:hover {
        background: #f1f5f9;
    }

    .cta-section p {
        color: rgba(15, 23, 42, 0.8);
        margin-top: 1rem;
    }

    .cta-urgent {
        background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
    }

    .cta-urgent .btn-primary {
        background: white;
        color: #dc2626;
    }

    /* Urgency Banner */
