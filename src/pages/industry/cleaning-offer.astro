    <script is:inline>
        // Capture IP address on page load
        (function() {
            fetch('https://api.ipify.org?format=json')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('ip_address').value = data.ip;
                })
                .catch(error => {
                    console.log('Unable to fetch IP address');
                });
        })();

        // Capture UTM parameters and GCLID from URL
        (function() {
            const urlParams = new URLSearchParams(window.location.search);

            // UTM parameters
            const utmParams = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'];
            utmParams.forEach(param => {
                const value = urlParams.get(param);
                if (value) {
                    document.getElementById(param).value = value;
                }
            });

            // GCLID (Google Click ID)
            const gclid = urlParams.get('gclid');
            if (gclid) {
                document.getElementById('gclid').value = gclid;
            }

            // FBCLID (Facebook Click ID)
            const fbclid = urlParams.get('fbclid');
            if (fbclid) {
                document.getElementById('fbclid').value = fbclid;
            }
        })();

        // Handle conditional redirect based on revenue
        document.getElementById('lead-trial-form').addEventListener('submit', function(e) {
            e.preventDefault();

            const revenue = document.getElementById('monthly-revenue').value;
            const form = this;

            // Submit form data to Formspree
            fetch(form.action, {
                method: 'POST',
                body: new FormData(form),
                headers: {
                    'Accept': 'application/json'
                }
            }).then(function(response) {
                if (response.ok) {
                    // Conditional redirect based on revenue
                    if (revenue === 'Just starting (<$5k)') {
                        // Redirect to downsell page (Pilot Pack offer)
                        window.location.href = '/industry/thankyou-pilot';
                    } else {
                        // Redirect to success page (qualified for free trial)
                        window.location.href = '/industry/thankyou-qualified';
                    }
                } else {
                    alert('There was a problem submitting your form. Please try again or email luc@lucflynn.com');
                }
            }).catch(function(error) {
                alert('There was a problem submitting your form. Please try again or email luc@lucflynn.com');
            });
        });
    </script>

