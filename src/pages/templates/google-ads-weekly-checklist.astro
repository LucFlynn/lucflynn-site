---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Google Ads 20-Minute Weekly Optimization Checklist | Luc Flynn" showNav={false} showFooter={false}>
  <style>
    body {
      background: #0B0F2F;
      color: #E0E0E0;
      font-family: 'Inter', sans-serif;
      line-height: 1.6;
      padding: 2rem 1rem;
    }

    .checklist-container {
      max-width: 900px;
      margin: 0 auto;
      background: linear-gradient(135deg, #1E2251 0%, #252a5f 100%);
      padding: 3rem;
      border-radius: 16px;
      border: 2px solid #6366F1;
      box-shadow: 0 12px 32px rgba(99, 102, 241, 0.2);
    }

    .header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 2rem;
      border-bottom: 2px solid rgba(99, 102, 241, 0.3);
    }

    .header-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .header h1 {
      font-size: 2.2rem;
      color: #FFFFFF;
      margin-bottom: 0.5rem;
      line-height: 1.2;
    }

    .header-subtitle {
      font-size: 1.1rem;
      color: #A6ADFF;
      margin-bottom: 1rem;
    }

    .header-meta {
      display: flex;
      gap: 2rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 1rem;
    }

    .meta-item {
      font-size: 0.95rem;
      color: #B0B8E0;
    }

    .meta-item strong {
      color: #6366F1;
      font-weight: 700;
    }

    .priority-section {
      margin-bottom: 3rem;
    }

    .priority-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding: 1rem;
      background: rgba(99, 102, 241, 0.15);
      border-radius: 8px;
      border-left: 4px solid #6366F1;
    }

    .priority-icon {
      font-size: 2rem;
    }

    .priority-title {
      flex: 1;
    }

    .priority-title h2 {
      font-size: 1.8rem;
      color: #FFFFFF;
      margin: 0 0 0.25rem 0;
    }

    .priority-subtitle {
      font-size: 0.95rem;
      color: #A6ADFF;
      margin: 0;
    }

    .subsection {
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: rgba(11, 15, 47, 0.5);
      border-radius: 8px;
      border: 1px solid rgba(99, 102, 241, 0.2);
    }

    .subsection h3 {
      font-size: 1.3rem;
      color: #FFFFFF;
      margin-bottom: 1rem;
    }

    .checklist-item {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      margin-bottom: 1rem;
      padding: 1rem;
      background: rgba(30, 34, 81, 0.4);
      border-radius: 6px;
      transition: all 0.2s ease;
    }

    .checklist-item:hover {
      background: rgba(99, 102, 241, 0.1);
      transform: translateX(5px);
    }

    .checklist-item input[type="checkbox"] {
      width: 20px;
      height: 20px;
      cursor: pointer;
      margin-top: 0.25rem;
      flex-shrink: 0;
    }

    .checklist-item label {
      flex: 1;
      cursor: pointer;
      color: #E0E0E0;
      font-size: 1rem;
    }

    .checklist-item input[type="checkbox"]:checked + label {
      text-decoration: line-through;
      opacity: 0.6;
    }

    .warning-box {
      background: rgba(255, 107, 157, 0.1);
      border-left: 4px solid #FF6B9D;
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 6px;
    }

    .warning-box p {
      margin: 0.5rem 0;
      color: #FFB3CD;
      font-size: 0.95rem;
    }

    .success-box {
      background: rgba(16, 185, 129, 0.1);
      border-left: 4px solid #10B981;
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 6px;
    }

    .success-box p {
      margin: 0.5rem 0;
      color: #6EE7B7;
      font-size: 0.95rem;
    }

    .info-box {
      background: rgba(99, 102, 241, 0.1);
      border-left: 4px solid #6366F1;
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 6px;
    }

    .info-box p {
      margin: 0.5rem 0;
      color: #A6ADFF;
      font-size: 0.95rem;
    }

    .benchmark-table {
      width: 100%;
      margin: 1.5rem 0;
      border-collapse: collapse;
      background: rgba(30, 34, 81, 0.4);
      border-radius: 8px;
      overflow: hidden;
    }

    .benchmark-table th,
    .benchmark-table td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid rgba(99, 102, 241, 0.2);
    }

    .benchmark-table th {
      background: rgba(99, 102, 241, 0.2);
      color: #FFFFFF;
      font-weight: 700;
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
    }

    .benchmark-table td {
      color: #E0E0E0;
    }

    .benchmark-table tr:last-child td {
      border-bottom: none;
    }

    .tip-box {
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);
      padding: 1.5rem;
      border-radius: 8px;
      border: 2px solid rgba(99, 102, 241, 0.3);
      margin: 2rem 0;
    }

    .tip-box h3 {
      color: #FFFFFF;
      margin-bottom: 0.5rem;
      font-size: 1.2rem;
    }

    .tip-box p {
      color: #B0B8E0;
      margin: 0;
    }

    .summary-checklist {
      background: rgba(16, 185, 129, 0.1);
      padding: 1.5rem;
      border-radius: 8px;
      border: 2px solid #10B981;
      margin: 2rem 0;
    }

    .summary-checklist h3 {
      color: #FFFFFF;
      margin-bottom: 1rem;
      font-size: 1.3rem;
    }

    .cta-section {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 2px solid rgba(99, 102, 241, 0.3);
      text-align: center;
    }

    .cta-section h3 {
      color: #FFFFFF;
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .cta-section p {
      color: #B0B8E0;
      margin-bottom: 1.5rem;
    }

    .cta-button {
      display: inline-block;
      background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
      color: white;
      padding: 1rem 2rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
    }

    .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(99, 102, 241, 0.6);
    }

    .back-link {
      display: inline-block;
      margin-bottom: 2rem;
      color: #6366F1;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .back-link:hover {
      color: #8B5CF6;
    }

    .nested-list {
      margin-left: 1.5rem;
      margin-top: 0.5rem;
    }

    .nested-list li {
      margin-bottom: 0.5rem;
      color: #B0B8E0;
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem 0.5rem;
      }

      .checklist-container {
        padding: 2rem 1.5rem;
      }

      .header h1 {
        font-size: 1.8rem;
      }

      .priority-title h2 {
        font-size: 1.4rem;
      }

      .header-meta {
        flex-direction: column;
        gap: 0.5rem;
      }
    }
  </style>

  <div class="checklist-container">
    <a href="/" class="back-link">&larr; Back to Home</a>

    <div class="header">
      <div class="header-icon">&#x1F4CA;</div>
      <h1>Google Ads 20-Minute Weekly Optimization Checklist</h1>
      <p class="header-subtitle">The High-Impact Tasks That Actually Move the Needle</p>
      <div class="header-meta">
        <div class="meta-item"><strong>Time Required:</strong> 20 minutes</div>
        <div class="meta-item"><strong>When:</strong> Every Monday morning</div>
        <div class="meta-item"><strong>Impact:</strong> Catch issues before they waste budget</div>
      </div>
    </div>

    <!-- PRIORITY 1 -->
    <div class="priority-section">
      <div class="priority-header">
        <div class="priority-icon">&#x1F6A8;</div>
        <div class="priority-title">
          <h2>PRIORITY 1: Critical Health Checks</h2>
          <p class="priority-subtitle">Do these EVERY week. Skip these and you'll waste money. (5 min)</p>
        </div>
      </div>

      <div class="subsection">
        <h3>Budget & Tracking</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p1-budget-pacing" />
          <label for="p1-budget-pacing">Budget pacing on track? (Current spend &divide; days elapsed) &times; days in month = projected spend</label>
        </div>
        <div class="warning-box">
          <p>&#x26A0;&#xFE0F; If >10% off target, adjust daily budget today</p>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p1-conversions-tracking" />
          <label for="p1-conversions-tracking">Conversions tracking correctly? Check last 7 days vs. previous week</label>
        </div>
        <div class="warning-box">
          <p>&#x26A0;&#xFE0F; If conversions dropped >30%, check tracking immediately</p>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p1-disapproved-ads" />
          <label for="p1-disapproved-ads">Any disapproved ads? (Notifications &rarr; Policy issues)</label>
        </div>
        <div class="warning-box">
          <p>Fix immediately or pause campaign</p>
        </div>
      </div>

      <div class="subsection">
        <h3>Performance Red Flags</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p1-impression-share" />
          <label for="p1-impression-share">Search Impression Share dropped >10%? &rarr; Budget or rank issue</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p1-cpc-increase" />
          <label for="p1-cpc-increase">Average CPC increased >20%? &rarr; Auction competition or Quality Score drop</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p1-ctr-check" />
          <label for="p1-ctr-check">CTR below 5%? &rarr; Ad copy or targeting issue</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p1-cvr-check" />
          <label for="p1-cvr-check">CVR below 5%? &rarr; Landing page or lead quality issue</label>
        </div>

        <div class="info-box">
          <p>&#x1F3AF; If all green, move to Priority 2. If red flags, stop and fix before optimizing.</p>
        </div>
      </div>
    </div>

    <!-- PRIORITY 2 -->
    <div class="priority-section">
      <div class="priority-header">
        <div class="priority-icon">&#x26A1;</div>
        <div class="priority-title">
          <h2>PRIORITY 2: Search Terms Cleanup</h2>
          <p class="priority-subtitle">This single task prevents the most wasted spend. (10 min)</p>
        </div>
      </div>

      <div class="subsection">
        <h3>Step 1: Find the Waste (3 min)</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p2-search-terms-report" />
          <label for="p2-search-terms-report">Go to: Search Terms Report &rarr; Sort by Cost (high to low)</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p2-scan-terms" />
          <label for="p2-scan-terms">Scan top 20-30 search terms</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p2-mark-irrelevant" />
          <label for="p2-mark-irrelevant">Mark any that are:
            <ul class="nested-list">
              <li>&#x274C; Completely irrelevant to your service</li>
              <li>&#x274C; Job seekers (e.g., "marketing jobs," "how to become")</li>
              <li>&#x274C; Informational only (e.g., "what is," "how to," "free")</li>
              <li>&#x274C; Wrong geography (if local business)</li>
              <li>&#x274C; Competitors (if not intentional)</li>
            </ul>
          </label>
        </div>
      </div>

      <div class="subsection">
        <h3>Step 2: Add Negatives (5 min)</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p2-add-negatives" />
          <label for="p2-add-negatives">Add marked terms as negative keywords</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p2-campaign-negatives" />
          <label for="p2-campaign-negatives">Add at Campaign level if irrelevant to entire account</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p2-adgroup-negatives" />
          <label for="p2-adgroup-negatives">Add at Ad Group level if only irrelevant to specific ad group</label>
        </div>
      </div>

      <div class="subsection">
        <h3>Step 3: Find Winners (2 min)</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p2-identify-winners" />
          <label for="p2-identify-winners">Identify any search terms with:
            <ul class="nested-list">
              <li>&#x2705; 3+ conversions</li>
              <li>&#x2705; Below-average CPA</li>
              <li>&#x2705; Not already a keyword in account</li>
            </ul>
          </label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p2-add-winners" />
          <label for="p2-add-winners">Add as exact match keywords with manual bids</label>
        </div>

        <div class="success-box">
          <p>&#x1F4B0; This 10 minutes typically saves $500-2,000/month in wasted clicks.</p>
        </div>
      </div>
    </div>

    <!-- PRIORITY 3 -->
    <div class="priority-section">
      <div class="priority-header">
        <div class="priority-icon">&#x1F4CA;</div>
        <div class="priority-title">
          <h2>PRIORITY 3: Performance Monitoring</h2>
          <p class="priority-subtitle">Quick metric checks to spot trends early. (5 min)</p>
        </div>
      </div>

      <div class="subsection">
        <h3>Campaign-Level Check</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p3-sort-campaigns" />
          <label for="p3-sort-campaigns">Sort campaigns by Cost (high to low)</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p3-check-top-3" />
          <label for="p3-check-top-3">Check top 3 campaigns:
            <ul class="nested-list">
              <li>CPA within target? (If not, note for deeper dive)</li>
              <li>Conversion volume stable? (>30% drop = investigate)</li>
              <li>Wasted spend >20%? (Clicks with no conversions = optimize targeting)</li>
            </ul>
          </label>
        </div>
      </div>

      <div class="subsection">
        <h3>Ad Group Health</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p3-low-ctr" />
          <label for="p3-low-ctr">Find ad groups with CTR &lt;3% &rarr; Flag for new ad copy</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p3-low-cvr" />
          <label for="p3-low-cvr">Find ad groups with CVR &lt;3% &rarr; Flag for landing page review</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p3-high-cpc" />
          <label for="p3-high-cpc">Find ad groups with CPC 50% higher than average &rarr; Quality Score issue</label>
        </div>
      </div>

      <div class="subsection">
        <h3>Quality Score Spot Check</h3>

        <div class="checklist-item">
          <input type="checkbox" id="p3-add-qs-column" />
          <label for="p3-add-qs-column">Columns &rarr; Modify &rarr; Add "Quality Score"</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p3-sort-keywords" />
          <label for="p3-sort-keywords">Sort keywords by Cost (high to low)</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="p3-flag-low-qs" />
          <label for="p3-flag-low-qs">Flag any top-spending keywords with QS &lt;6 for improvement</label>
        </div>
      </div>
    </div>

    <!-- OPTIONAL TASKS -->
    <div class="priority-section">
      <div class="priority-header">
        <div class="priority-icon">&#x1F527;</div>
        <div class="priority-title">
          <h2>IF YOU HAVE TIME: Optimization Tasks</h2>
          <p class="priority-subtitle">Only do these if Priority 1-3 are clean (Do Monthly)</p>
        </div>
      </div>

      <div class="subsection">
        <h3>Extensions Check (5 min)</h3>

        <div class="checklist-item">
          <input type="checkbox" id="opt-sitelinks" />
          <label for="opt-sitelinks">All campaigns have 4+ sitelinks?</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="opt-callouts" />
          <label for="opt-callouts">All campaigns have 4+ callouts?</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="opt-phone" />
          <label for="opt-phone">Phone extension working?</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="opt-promotions" />
          <label for="opt-promotions">Any expired promotions to remove?</label>
        </div>
      </div>

      <div class="subsection">
        <h3>Ad Copy Refresh (15 min)</h3>

        <div class="checklist-item">
          <input type="checkbox" id="opt-old-ads" />
          <label for="opt-old-ads">Any ads running >60 days? Test new variations</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="opt-rsa-strength" />
          <label for="opt-rsa-strength">RSA Ad Strength "Good" or better?</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="opt-active-rsa" />
          <label for="opt-active-rsa">Each ad group has 1+ active RSA?</label>
        </div>
      </div>

      <div class="subsection">
        <h3>Bid Strategy Review (10 min)</h3>

        <div class="checklist-item">
          <input type="checkbox" id="opt-learning-phase" />
          <label for="opt-learning-phase">Campaigns in learning phase >14 days? Check volume</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="opt-manual-bids" />
          <label for="opt-manual-bids">Manual bidding: adjust bids on top 10 keywords based on performance</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="opt-target-check" />
          <label for="opt-target-check">Target CPA/ROAS: Are actual results within 20% of target?</label>
        </div>
      </div>
    </div>

    <!-- DOCUMENT & TRACK -->
    <div class="priority-section">
      <div class="priority-header">
        <div class="priority-icon">&#x1F4DD;</div>
        <div class="priority-title">
          <h2>DOCUMENT & TRACK</h2>
          <p class="priority-subtitle">After Each Session</p>
        </div>
      </div>

      <div class="subsection">
        <div class="checklist-item">
          <input type="checkbox" id="doc-log-changes" />
          <label for="doc-log-changes">Log what you changed (even if it's "no changes needed")</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="doc-note-issues" />
          <label for="doc-note-issues">Note any issues to investigate deeper next week</label>
        </div>

        <div class="checklist-item">
          <input type="checkbox" id="doc-track-metrics" />
          <label for="doc-track-metrics">Track weekly metrics in simple spreadsheet: Date, Spend, Conversions, CPA, Top Issue, Action Taken</label>
        </div>
      </div>
    </div>

    <!-- BENCHMARKS -->
    <div class="priority-section">
      <div class="priority-header">
        <div class="priority-icon">&#x1F3AF;</div>
        <div class="priority-title">
          <h2>BENCHMARKS: What's "Good"?</h2>
        </div>
      </div>

      <table class="benchmark-table">
        <thead>
          <tr>
            <th>Metric</th>
            <th>Good</th>
            <th>Great</th>
            <th>Poor</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>CTR</td>
            <td>5-8%</td>
            <td>>10%</td>
            <td>&lt;3%</td>
          </tr>
          <tr>
            <td>CVR</td>
            <td>5-10%</td>
            <td>>10%</td>
            <td>&lt;3%</td>
          </tr>
          <tr>
            <td>Quality Score</td>
            <td>7-8</td>
            <td>9-10</td>
            <td>&lt;6</td>
          </tr>
          <tr>
            <td>Search IS</td>
            <td>>60%</td>
            <td>>80%</td>
            <td>&lt;50%</td>
          </tr>
          <tr>
            <td>Wasted Spend</td>
            <td>&lt;20%</td>
            <td>&lt;10%</td>
            <td>>30%</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- WHEN TO GO DEEPER -->
    <div class="warning-box">
      <h3 style="color: #FFFFFF; margin-bottom: 0.75rem;">&#x26A0;&#xFE0F; WHEN TO GO DEEPER</h3>
      <p>If you see these patterns, schedule a 1-hour deep dive:</p>
      <ul style="margin: 0.5rem 0 0 1.5rem; color: #FFB3CD;">
        <li>Conversion volume dropped >50% (tracking issue or market change)</li>
        <li>CPA increased >50% (auction dynamics changed)</li>
        <li>CTR below 3% across account (targeting or ad copy problem)</li>
        <li>Search IS below 50% (budget or Quality Score crisis)</li>
      </ul>
    </div>

    <!-- SUMMARY -->
    <div class="summary-checklist">
      <h3>&#x2705; WEEKLY CHECKLIST SUMMARY</h3>

      <p style="color: #FFFFFF; font-weight: 700; margin-top: 1rem;">Every Week (20 min):</p>
      <ul style="margin: 0.5rem 0 0 1.5rem; color: #B0B8E0;">
        <li>&#x2705; Health checks (5 min)</li>
        <li>&#x2705; Search terms cleanup (10 min)</li>
        <li>&#x2705; Performance monitoring (5 min)</li>
      </ul>

      <p style="color: #FFFFFF; font-weight: 700; margin-top: 1.5rem;">Monthly (30-45 min additional):</p>
      <ul style="margin: 0.5rem 0 0 1.5rem; color: #B0B8E0;">
        <li>Extensions check</li>
        <li>Ad copy refresh</li>
        <li>Bid strategy review</li>
      </ul>

      <p style="color: #FFFFFF; font-weight: 700; margin-top: 1.5rem;">Quarterly:</p>
      <ul style="margin: 0.5rem 0 0 1.5rem; color: #B0B8E0;">
        <li>Full account restructure audit</li>
        <li>Competitor analysis (Auction Insights)</li>
        <li>Landing page overhaul</li>
      </ul>
    </div>

    <!-- PRO TIP -->
