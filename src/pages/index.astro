---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Luc Flynn - Tracking, Analytics & Funnel Infrastructure">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="value-badge">$11M+ IN AD SPEND TRACKED & OPTIMIZED</div>
      <h1 class="hero-headline">
        Your Tracking is Broken.<br />
        <span class="highlight">Your Data is Lying to You.</span><br />
        I Fix Both.
      </h1>
      <p class="hero-subtext">
        I build and fix tracking, analytics, and conversion infrastructure for agencies and in-house teams.<br />
        Bad data = bad decisions. Let's fix that first.
      </p>

      <div class="hero-cta-group">
        <a href="/contact" class="btn-primary">
          Get a Free Tracking Audit &rarr;
        </a>
        <a href="#quick-wins" class="btn-secondary">
          Browse Free Tools
        </a>
      </div>

      <div class="trust-indicators">
        <div class="indicator">
          <span class="indicator-number">150+</span>
          <span class="indicator-label">Clients Served</span>
        </div>
        <div class="indicator">
          <span class="indicator-number">$11M+</span>
          <span class="indicator-label">Ad Spend Managed</span>
        </div>
        <div class="indicator">
          <span class="indicator-number">8+</span>
          <span class="indicator-label">Years Experience</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Win Section -->
  <section id="quick-wins" class="quick-wins">
    <div class="container">
      <div class="section-header">
        <h2>Free Diagnostic Tools</h2>
        <p>Find out what's broken before you spend another dollar</p>
      </div>

      <div class="resource-grid">
        <a href="/templates/healthcheck" class="resource-card-link">
          <div class="resource-card featured">
            <div class="card-badge">MOST POPULAR</div>
            <h3>Ad Account Health Check</h3>
            <p>Enter your last 30 days of data and get an instant diagnosis. Takes 2 minutes, tells you exactly what's leaking money.</p>
            <ul class="resource-benefits">
              <li>&#10003; Instant performance diagnosis</li>
              <li>&#10003; 3 prioritized improvements</li>
              <li>&#10003; Benchmarks vs. your industry</li>
            </ul>
            <span class="resource-link">Run Free Health Check &rarr;</span>
          </div>
        </a>

        <a href="/templates/facebook-lead-spam-checklist" class="resource-card-link">
          <div class="resource-card">
            <h3>Stop Facebook Lead Spam</h3>
            <p>61% of advertisers cite junk leads as their #1 problem. This checklist cuts spam by 40-60% in 48 hours.</p>
            <ul class="resource-benefits">
              <li>&#10003; Lead qualification question library</li>
              <li>&#10003; Facebook form setup guide</li>
              <li>&#10003; Spam reduction tactics</li>
            </ul>
            <span class="resource-link">Get Free Checklist &rarr;</span>
          </div>
        </a>

        <a href="/templates/weekly-optimization-checklists" class="resource-card-link">
          <div class="resource-card">
            <h3>Weekly Optimization Checklists</h3>
            <p>20-minute Google & Meta optimization routines. Never miss critical checks that leak money.</p>
            <ul class="resource-benefits">
              <li>&#10003; Google Ads 20-min checklist</li>
              <li>&#10003; Facebook Ads 20-min checklist</li>
              <li>&#10003; Prioritized by impact</li>
            </ul>
            <span class="resource-link">Get Checklists &rarr;</span>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Level Up Section -->
  <section id="all-resources" class="all-resources level-up">
    <div class="container">
      <div class="section-header">
        <h2>More Free Resources</h2>
        <p>SOPs, calculators, and frameworks — no email required</p>
      </div>

      <details class="expandable-section" open>
        <summary class="expand-toggle">
          <span class="toggle-text">Show Resources</span>
          <span class="toggle-icon">&#9660;</span>
        </summary>

        <div class="resource-categories">
          <!-- Templates & Calculators -->
          <div class="category-block">
            <div class="category-header">
              <h3>&#128202; Calculators & Tools</h3>
              <span class="item-count">3 Tools</span>
            </div>
            <div class="category-items">
              <a href="/templates/healthcheck">Ad Account Health Check</a>
              <a href="/templates/lead-score">Lead Quality Score Calculator</a>
              <a href="/templates/calculator">CAC Calculator</a>
            </div>
          </div>

          <!-- Advanced SOPs -->
          <div class="category-block">
            <div class="category-header">
              <h3>&#128203; Deep-Dive SOPs</h3>
              <span class="item-count">6 Guides</span>
            </div>
            <div class="category-items">
              <a href="/sop/keyword-optimization">Keyword Optimization</a>
              <a href="/sop/campaign-optimization">Campaign Optimization</a>
              <a href="/sop/scaling">Scaling Framework</a>
              <a href="/sop/landing-page">Landing Page Optimization</a>
              <a href="/sop/conversion-tracking">Conversion Tracking Setup</a>
              <a href="/sop/lead-scoring">Lead Scoring</a>
              <a href="/sop" class="see-all">See all SOPs &rarr;</a>
            </div>
          </div>
        </div>
      </details>
    </div>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="container">
      <div class="about-content">
        <div class="about-text">
          <h2>Why I Give Away My Playbooks</h2>
          <p class="lead">Most businesses are flying blind. Their tracking is broken, their attribution is wrong, and they're making decisions on bad data.</p>
          <p>I've spent 8+ years and $11M+ in ad spend learning exactly how to fix this. Every SOP, template, and tool on this site is something I actually use with clients.</p>
          <p>I give it away because the bottleneck is never knowledge — it's execution. The people who can execute become great partners. The ones who can't become great clients.</p>
          <div class="about-stats">
            <div class="stat">
              <strong>150+</strong> clients served
            </div>
            <div class="stat">
              <strong>$11M+</strong> ad spend managed
            </div>
            <div class="stat">
              <strong>7+</strong> agency partners
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Work With Me Section -->
  <section id="work" class="work">
    <div class="container">
      <div class="section-header">
        <h2>Work With Me</h2>
        <p>Three ways I help teams fix their measurement and funnel infrastructure</p>
      </div>

      <div class="offer-grid">
        <div class="offer-card">
          <h3>Full Funnel Build</h3>
          <div class="price">Done-For-You</div>
          <ul>
            <li>I build your entire tracking & conversion infrastructure on a proven stack</li>
            <li>Google Tag Manager, GA4, server-side tracking</li>
            <li>Conversion API setup (Meta CAPI, Google Enhanced Conversions)</li>
            <li>Attribution modeling & reporting dashboards</li>
            <li>End-to-end funnel QA</li>
          </ul>
          <a href="/contact" class="btn-primary">Get a Free Audit &rarr;</a>
        </div>

        <div class="offer-card">
          <h3>Tracking Fix</h3>
          <div class="price">Done-For-You</div>
          <ul>
            <li>I fix your existing tracking on whatever stack you're running</li>
            <li>Audit every tag, pixel, and conversion event</li>
            <li>Fix data discrepancies between platforms</li>
            <li>Ensure accurate attribution across channels</li>
            <li>Documentation so your team can maintain it</li>
          </ul>
          <a href="/contact" class="btn-primary">Get a Free Audit &rarr;</a>
        </div>

        <div class="offer-card">
          <h3>Consulting</h3>
          <div class="price">By the Hour</div>
          <ul>
            <li>Hop on a call — you screenshare, I guide</li>
            <li>Perfect for teams that can execute but need direction</li>
            <li>Live troubleshooting and strategy</li>
            <li>No retainer, no commitment</li>
            <li>Walk away with a clear action plan</li>
          </ul>
          <a href="/contact" class="btn-primary">Book a Session &rarr;</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="final-cta">
    <div class="container" style="text-align: center; padding: 4rem 2rem;">
      <h2 style="font-size: 2rem; color: #fff; margin-bottom: 1rem;">Not Sure What You Need?</h2>
      <p style="font-size: 1.15rem; color: #B0B8E0; margin-bottom: 2rem; max-width: 600px; margin-left: auto; margin-right: auto;">
        Start with a free audit. I'll look at your tracking setup, tell you what's broken, and give you a plan to fix it — whether you hire me or not.
      </p>
      <a href="/contact" class="btn-primary" style="font-size: 1.1rem; padding: 1rem 2.5rem;">
        Request Free Audit &rarr;
      </a>
    </div>
  </section>

  <script>
    // Handle expandable section
    const summary = document.querySelector('.expandable-section summary');
    if (summary) {
      summary.addEventListener('click', function() {
        const icon = this.querySelector('.toggle-icon');
        const text = this.querySelector('.toggle-text');
        setTimeout(() => {
          if (this.parentElement.open) {
            icon.textContent = '\u25BC';
            text.textContent = 'Show Resources';
          } else {
            icon.textContent = '\u25B2';
            text.textContent = 'Hide Resources';
          }
        }, 10);
      });
    }
  </script>
</BaseLayout>
